#ex1
names = ["Richard", "Igor", "Jonathan", "Alice", "Mary", "Bonnie"]
for x in names:
    print(f"Hello {x}!")
#ex2
phrase = "I'm learning cycles."
for i in range(10):
    print(phrase)
#ex3
stations = ["Малиновка", "Рябиновка", "Суслово", "Дрожжино", "Звягино"]
for i in stations:
    if i == stations[-1]:
        print(f"Поезд на станции: {i} Конечная!")
    else:
        print(f"Поезд на стации: {i}")
#ex4
shop = ["Laptop", "Smartphone", "Watch", "Tablet", "Headphones"]
for i in shop:
    if i == shop [0]:
        print("I'm buying this.")
    else:
        print("I don't need it.")
#ex5
tasks = ["Сдать проект (Важная)", "Сходить в магазин", "Позвонить врачу (Важная)", "Убраться в комнате", "Подготовить отчёт"]
for i, task in enumerate(tasks, 1):
    if "Важная" in task:
        print(f"{i}!:{task}")
    else:
        print(f"{i}:{task}")
#ex6
answer = 0
i = int(input('Введите количество чисел:'))
for num in range(i):
    print('Введите сами числа:')
    x = int(input())
    answer = answer + x
print('Сумма чисел = ', answer)
#ex7
i = 1
while i < 11:
    print('Цикл сработал ', i, 'раз.')
    i += 1
